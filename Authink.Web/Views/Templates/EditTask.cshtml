@using resources = Resources.Main;

    <div class="task-edit-container">
    <form ng-submit="editTask()">
        <div>
            <div class="task-edit-header clearfix">
                <div class="task-edit-header-left">
                    <img ng-src="{{task.ProfilePictureUrl}}" alt="" />
                </div>
                <div class="task-edit-header-right">
                    <div>
                        <span class="task-edit-header-right-name">@resources.TaskEdit_Name</span>
                        <input type="text" class="task-edit-name-field" ng-model="task.Name" required />
                    </div>
                    <div>
                        <span>@resources.TaskEdit_Description</span>
                        <textarea ng-model="task.Description" class="task-edit-description-field" required></textarea>
                    </div>
                </div>
            </div>
            <div class="task-edit-options">
                <input type="submit" value="@resources.TaskEdit_Save" class="btn task-edit-save" />
            </div>
        </div>
    </form>
        <div class="task-edit-voice-command">
        
            <button class="btn" ng-click="toggleVoiceCommandCollapse()">@resources.EditTask_VoiceCommand_Title</button>
            <div collapse="isVoiceCommandCollapsed">

                <a class="btn-success task-edit-voice-command-preview" ng-href="{{task.VoiceCommand.Url}}" target="_blank" ng-show="task.VoiceCommand">@resources.EditTask_VoiceCommand_Listen</a>
        
                <div class="task-edit-voice-command-add-new">
                    <h3>@resources.EditTask_VoiceCommand_UploadNew</h3>
                    <span>{{uploadProgress}}</span>
                    <input type="file" ng-file-select="onSoundFileSelect($files)">
                </div>
            </div>
        </div>
        
        <div class="task-edit-content clearfix">
            <edit-task-pictures-list></edit-task-pictures-list>
        </div>
    </div>

      
