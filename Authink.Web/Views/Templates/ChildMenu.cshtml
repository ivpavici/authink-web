@using resources = Resources.Main;

<div id="child-menu" class="clearfix">

    <div id="child-menu-info" class="clearfix">

        <img id="child-menu-info-image" ng-src={{childMenuApi.displayedChild.ProfilePictureUrl}} alt="" />

        <div id="child-menu-info-menu">

            <a id="child-menu-info-menu-child-name">{{childMenuApi.displayedChild.Firstname}} {{childMenuApi.displayedChild.Lastname}}</a>

            <ul>
                <li class="child-menu-select" ng-repeat="child in childMenuApi.children" ng-click="selectChild(child)" ng-class="{'child-menu-info-menu-selected' : child.Id == childMenuApi.displayedChild.Id}">

                    <span>{{child.Firstname}} {{child.Lastname}}</span>

                </li>

                <li action="add-child" ng-click="addChild()"><span>@resources.ChildMenu_CreateNew</span></li>

            </ul>

        </div>

    </div>

    <a id="child-menu-edit-button" ng-click="editChild()"><span>@resources.ChildMenu_Edit</span></a>

</div>