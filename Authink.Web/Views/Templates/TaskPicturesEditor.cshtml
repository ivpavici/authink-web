@using resources = Resources.Main;

<div class="task-picture-container" ng-if="isSimpleEdit()">

    <div class="task-picture-image">

        <img ng-src="{{picture.Url}}" alt="" />

        <span>@resources.TaskPicturesEditor_Title</span>

        {{uploadProgress}}

        <input type="file" ng-file-select="onFileSelect($files)">

    </div>

    <div class="task-edit-options">
        <input type="submit" value="@resources.TaskPicturesEditor_Save" class="btn task-edit-save" ng-click="closeModel()" />
        <a class="task-edit-save btn" href="#" ng-click="closeModel()">@resources.Popup_Cancel</a>
    </div>

</div>

<div class="task-picture-container" ng-if="isDetectColorsEdit()">

    <div class="task-picture-image">

        <img ng-src="{{picture.Url}}" alt="" />

        <span>@resources.TaskPicturesEditor_Title</span>

        <span>{{uploadProgress}}</span>

        <input type="file" ng-file-select="onFileSelect($files)">

    </div>

    <div class="task-edit-content clearfix">
        <div class="task-edit-picture-item ">

            <div class="task-edit-picture-colors">

                <div class="task-edit-picture-colors-correct clearfix">

                    <h1>@resources.TaskPicturesEditor_CorrectColor</h1>
                    <input type="color" colorpicker ng-model="picture.CorrectColor.Value" class="colorPickerHolder task-edit-picture-colors-single"/>

                </div>

                <div class="task-edit-picture-colors-incorrect clearfix">

                    <h1>@resources.TaskPicturesEditor_WrongColor</h1>

                    <div ng-repeat="wrongColor in picture.WrongColors">

                        <input type="color" colorpicker class="colorPickerHolder task-edit-picture-colors-single" ng-model="wrongColor.Value"/>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="task-edit-options">
        <input type="submit" value="@resources.TaskPicturesEditor_Save" class="btn task-edit-save" ng-click="editWithColors()" />
        <a class="task-edit-save btn" href="#" ng-click="closeModel()">@resources.Popup_Cancel</a>
    </div>

</div>

