<form ng-submit="editTask()">
    <div class="task-edit-container">
        <div>
            <div class="task-edit-header clearfix">
                <div class="task-edit-header-left">
                    <img ng-src="{{task.ProfilePictureUrl}}" alt="" />
                </div>
                <div class="task-edit-header-right">
                    <div>
                        <span class="task-edit-header-right-name">Name</span>
                        <input type="text" class="task-edit-name-field" ng-model="task.Name" required />
                    </div>
                    <div>
                        <span>Description</span>
                        <textarea ng-model="task.Description" class="task-edit-description-field" required></textarea>
                    </div>
                </div>
            </div>
            <div class="task-edit-content clearfix">
                <edit-task-pictures-list></edit-task-pictures-list>
            </div>
            <div class="task-edit-options">
                <input type="submit" value="Save" class="task-edit-save" />
            </div>
        </div>
    </div>
</form>