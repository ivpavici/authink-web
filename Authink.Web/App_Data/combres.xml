<?xml version="1.0" encoding="utf-8" ?>
<!--
  This file contains basic settings needed for most web apps.
  For full Combres settings (with explanation), refer to the sample definition file: combres_full_with_annotation.xml
  Also, refer to Combres' documentation: http://combres.codeplex.com/documentation	
-->
<combres xmlns='urn:combres'>
  <filters>
    <filter type="Combres.Filters.FixUrlsInCssFilter, Combres" />
  </filters>
  <resourceSets url="~/combres.axd"
                defaultDuration="30"
                defaultVersion="auto"
                >
    
    <resourceSet name="angularJs" type="js">
      <resource path="~/App_Data/Assets/Scripts/lib/jquery-1.10.2.min.js" />
      <resource path="~/App_Data/Assets/Scripts/lib/angular.min-1.2.0-rc.2.js" />
      <resource path="~/App_Data/Assets/Scripts/lib/angular-resource-v1.2.0-rc.3.min.js" />
      <resource path="~/App_Data/Assets/Scripts/lib/angular-route-1.2.0-rc.2.min.js" />
      <resource path="~/App_Data/Assets/Scripts/lib-patches/ui-bootstrap-0.6.0.min.js" />
      <resource path="~/App_Data/Assets/Scripts/lib-patches/ui-bootstrap-tpls-0.6.0.min.js" />
    </resourceSet>
    
    <resourceSet name="shellJs" type="js">
      <resource path="~/App_Data/Assets/Scripts/src/app.js" />
      <resource path="~/App_Data/Assets/Scripts/src/Repositories/testsRepository.js" />
      <resource path="~/App_Data/Assets/Scripts/src/Repositories/childrenRepository.js" />
      <resource path="~/App_Data/Assets/Scripts/src/Repositories/tasksRepository.js" />
      <resource path="~/App_Data/Assets/Scripts/src/Services/accountServices.js" />
      <resource path="~/App_Data/Assets/Scripts/src/Components/testsList.js" />
      <resource path="~/App_Data/Assets/Scripts/src/Components/testTasksList.js" />
      <resource path="~/App_Data/Assets/Scripts/src/Components/childMenu.js" />
      <resource path="~/App_Data/Assets/Scripts/src/Components/omniBar.js" />
      <resource path="~/App_Data/Assets/Scripts/src/Components/testPreview.js" />
      <resource path="~/App_Data/Assets/Scripts/src/Components/signUp.js" />
      <resource path="~/App_Data/Assets/Scripts/src/Components/createChild.js" />
      <resource path="~/App_Data/Assets/Scripts/src/Components/editChild.js" />
      <resource path="~/App_Data/Assets/Scripts/src/Components/createTest.js" />
      <resource path="~/App_Data/Assets/Scripts/src/Components/editTest.js" />
      <resource path="~/App_Data/Assets/Scripts/src/Components/taskPreview.js" />
      <resource path="~/App_Data/Assets/Scripts/src/Components/editTask.js" />
      <resource path="~/App_Data/Assets/Scripts/src/Controllers/shell.js" />
    </resourceSet>

    <resourceSet name="shellCss" type="css">
      <resource path="~/Assets/Style/home.css" />
      <resource path="~/Assets/Style/task.css" />
    </resourceSet>
    
    <resourceSet name="globalCss" type="css">
      <resource path="~/Assets/Style/bootstrap.css" />
      <resource path="~/Content/site.css" />
      <resource path="~/Assets/Style/reset.css" />
      <resource path="~/Assets/Style/style.css" />
    </resourceSet>
    
    <resourceSet name="globalJs" type="js">
      <resource path="~/Scripts/jquery-1.8.2.min.js" />
      <resource path="~/Scripts/jquery.unobtrusive-ajax.min.js" />
      <resource path="~/Scripts/Plugins/jquery.simplemodal.1.4.4.min.js" />
      <resource path="~/Scripts/Plugins/highcharts.js"/>
      <resource path="~/Assets/Scripts/authink.js" />
    </resourceSet>

    <resourceSet name="homeCss" type="css">
      <resource path="~/Assets/Style/home.css" />
      <resource path="~/Assets/Style/task.css" />
    </resourceSet>
    
    <resourceSet name="spectrumJs" type="js">
      <resource path= "~/Scripts/Plugins/SimpleColorpicker/spectrum.js"/>
    </resourceSet>
    <resourceSet name="spectrumCss" type="css">
      <resource path= "~/Scripts/Plugins/SimpleColorpicker/spectrum.css"/>
    </resourceSet>

    <resourceSet name="taskWizzardCss" type="css">
      <resource path="~/Assets/Style/wizard.css"/>
    </resourceSet>
    
  </resourceSets>
</combres>
